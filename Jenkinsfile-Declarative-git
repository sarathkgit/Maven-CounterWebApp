pipeline{
    
    agent any
    
    environment{
        PATH = "/opt/apache-maven-3.6.3/bin:$PATH"
    }
    
    stages{
        
        stage('Git Checkout'){
            steps{
                git 'https://github.com/sarathkgit/Maven-CounterWebApp'
            }
        }
        
        stage('Mvn Build'){
            steps{
                sh 'mvn clean package'
            }
        }
    }
}
